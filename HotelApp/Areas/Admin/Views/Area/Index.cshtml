@model List<Area>

<div class="container-fluid d-flex justify-content-center align-items-center" style="background-image: url('/images/banner1.jpg'); background-size: cover; padding: 50px 0px;">
    <div class="card shadow-lg container p-5">
        <div class="titlepage">
            <h2>Quản lý khu vực</h2>
        </div>
    <button class="btn btn-primary" style="width: 200px;" onclick="location.href='@Url.Action("Create","Area")'">Thêm khu vực</button>
        <table id="studentTable" class="table table-striped">
        <tr>
            <th>ID khu vực</th>
            <th>Tên Khu vực</th>
            <th colspan="3" class="text-center">Chức năng</th>
        </tr>
        
        @foreach (var area in Model){
            <tr>
                <td>@area.Id</td>
                <td>@area.Name</td>
                <td><button type="button" class="btn btn-info">Xem</button></td>
                <td><button type="button" class="btn btn-warning">Sửa</button></td>
                <td>
                        <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@area.Id" />
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
</div>