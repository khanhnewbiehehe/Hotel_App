@model HotelApp.Models.Room

<div class="container-fluid d-flex justify-content-center align-items-center" style="background-image: url('/images/banner1.jpg'); background-size: cover; padding: 50px 0px;">
    <div class="card shadow-lg container pt-5">
        <div class="titlepage">
            <h2>Thêm phòng</h2>
        </div>

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="TypeId">ID loại phòng</label>
                <input type="text" class="form-control" id="TypeId" name="TypeId" required />
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="AreaId">ID Khu vực</label>
                <input type="text" class="form-control" id="AreaId" name="AreaId" required />
                <span asp-validation-for="AreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Price">Giá tiền</label>
                <input type="text" class="form-control" id="Price" name="Price" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Discount">Giảm giá</label>
                <input type="text" class="form-control" id="Discount" name="Discount" required />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Status">Trạng thái</label>
                <input type="text" class="form-control" id="Status" name="Status" required />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Lưu</button>
        </form>
    </div>
</div>