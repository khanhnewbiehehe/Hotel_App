@model HotelApp.Models.RoomType

<div class="layout-demo-wrapper">
    <div class="card shadow-lg container p-5">
        <div class="titlepage">
            <h2>Cập Nhật Khu Vực</h2>
        </div>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="People"></label>
        <input type="number" class="form-control" asp-for="People" />
    </div>
    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input class="form-control" asp-for="ImagePath" />
    </div>
    <button type="submit" class="btn btn-success">Cập Nhật</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
</form>
    </div>
</div>